<div class="container">
    <div class="row text-center pt-3">
        <div>
            <input type="button" class="btn btn-success" id="playButton" value="Play" />
        </div>
    </div>
    <div class="row py-3">
        <div class="opponent-stack">
            <span id="opponentStackCt">Opponent Stack: 20 cards</span>
        </div>
        <div class="opponent-hand text-center">
            <img id="oppCard1" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="oppCard2" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="oppCard3" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="oppCard4" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="oppCard5" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
        </div>
    </div>
    <div class="row">
        <div class="playingField text-center" height="300px">
            <input type="button" id="stuckBtn" class="px-3 btn btn-primary" value="Stuck???" />
            <img id="exStack1" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="playStack1" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="playStack2" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="exStack2" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <h5 id="result" class="d-none">Hello</h5>
        </div>
    </div>
    <div class="row py-3">
        <div class="player-hand text-center">
            <img id="playerCard1" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="playerCard2" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="playerCard3" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="playerCard4" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            <img id="playerCard5" class="px-3" height="150px" width="130px" src="~/img/back.png"/>
            @*<ul id="messagesList"></ul>*@
        </div>
        <div class="player-stack">
            <span id="playerStackCt">Your Stack: 20 cards</span>
        </div>
    </div>

</div>



